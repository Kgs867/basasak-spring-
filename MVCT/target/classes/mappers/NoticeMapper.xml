<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper
PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
"http://mybatis.org/dtd/mybatis-3-mapper.dtd">

<mapper namespace="Notice">
	<select id="NList" resultType="boardNoticeDTO" >
		select * from notice order by n_num desc
	</select>
	
	<select id="NContent" resultType="boardNoticeDTO" parameterType="int">
		select * from notice where n_num=#{n_num}
	</select>
	<update id="NViewUpdate" parameterType="int">
		update notice set n_view=(n_view+1) where n_num=#{n_num}
	</update>
	
	<insert id="NInsert" parameterType="boardNoticeDTO">
		insert into notice(n_num,n_title,n_content,n_date,n_view,n_pw,a_id) values(#{n_num},#{n_title},#{n_content},now(),#{n_view},#{n_pw},#{a_id})
	</insert>
	<select id="NMax" resultType="int">
		select max(r_num) from review
	</select>
	
	<select id="RUpateForm" resultType="boardDTO" parameterType="int">
		select * from review where r_num=#{r_num}
	</select>
	<update id="RUpdate" parameterType="boardDTO">
		update review set r_title=#{r_title},r_content=#{r_content} where r_num=#{r_num} and r_pw=#{r_pw}
	</update>
	
	<delete id="RDelete" parameterType="boardDTO">
		delete from review where r_num=#{r_num} and r_pw=#{r_pw}
	</delete>
	
	
	<!-- <insert id="CAdd">
		insert into shopb()
	</insert> -->
	

</mapper>

	




